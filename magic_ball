import random

answers = ['Бесспорно',
           'Предрешено',
           'Никаких сомнений',
           'Определённо да',
           'Можешь быть уверен в этом',
           'Мне кажется - да',
           'Вероятнее всего',
           'Хорошие перспективы',
           'Знаки говорят - да',
           'Да',
           'Пока неясно, попробуй снова',
           'Спроси позже',
           'Лучше не рассказывать',
           'Сейчас нельзя предсказать',
           'Сконцентрируйся и спроси опять', 'Даже не думай', 'Мой ответ - нет', 'По моим данным - нет', 'Перспективы не очень хорошие', 'Весьма сомнительно']

print("Привет Мир, я магический шар, и я знаю ответ на любой твой вопрос.")
name = input("Скажи мне своё имя: ")
print("Привет,", name, "!")

flag = False
while flag != True:
    question = input("Скажи свой вопрос, а я постараюсь ответить на него: ")
    answer = random.choice(answers)
    print("Мой ответ: ", answer)
    flag_b = False
    while flag_b != True:
        done = input("Хочешь ли ты мне задать ещё вопрос?")
        if done == "Yes" or done == "YES" or done == "yes":
            flag_b = True
            break
        elif done == "No" or done == "NO" or done == "no":
            flag_b = True
            flag = True
            print("Возвращайся если возникнут вопросы!")
        else:
            flag_b = False
            print("Нужно ввести Yes или No. Я ведь магический шаг, а не человек.")
